<% content_for :functionality do %>
  <%= back_button(@project.name, project_path(@project)) %>
<% end %>

<%= form_for [@project, @ticket], :html => { :class => "form-horizontal", :multipart => true } do |f| %>
  <%= f.error_messages %>

  <div class="control-group">
    <%= f.label :title, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :title, :class => "input-xlarge" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, :class => "control-label" %>
    <div class="controls">
      <%= f.text_area :description, :rows => "4", :class => "input-xlarge" %>
    </div>
  </div>

  <%= render "tags/form" %>

  <% number = 0 %>

  <div id='files'>
    <%= render :partial => "files/form", :locals => { :number => number } %>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= link_to "Add another file", 'javascript:', :id => "add_another_file", :class => "btn btn-link" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>
