<% title("Users", "Admin Lounge") %>
<% header_title("Users") %>

<% content_for :functionality do %>
  <%= link_to "New User", new_admin_user_path, :class => 'btn btn-success' %>
  <%= back_button("Admin Lounge", admin_root_path) %>
<% end %>

<ul class='nav nav-pills nav-stacked' id='users'>
  <% @users.each do |user| %>
    <li class='user-pill'>
      <%= link_to user, [:admin, user] %>
    </li>
  <% end %>
</ul>
