<% title(@user, "Admin Lounge") %>
<% header_title(@user) %>

<% content_for :functionality do %>
  <%= link_to "Edit User", edit_admin_user_path(@user), :class => "btn btn-warning" %>
  <%= link_to "Delete User", admin_user_path(@user), :method => :delete, :confirm => "Are you sure you want to delete this user?", :class => "btn btn-danger" %>
  <%= back_button("users", admin_users_path) %>
<% end %>

<ul class='nav nav-pills nav-stacked' id='user-details-pills'>
  <li>
    <%= link_to "Permissions", admin_user_permissions_path(@user) %>
  </li>
</ul>
