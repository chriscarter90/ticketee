<% content_for :title, "Projects" %>
<% content_for :functionality do %>
  <%= admins_only do %>
    <%= link_to "New Project", new_project_path, :class => 'btn btn-success' %>
  <% end %>
<% end %>

<% if @projects.empty? %>
  <div class='alert'>
    There are no projects. Click <%= link_to "here", new_project_path %> to create one.
  </div>
<% else %>
  <ul class='nav nav-pills nav-stacked' id='projects'>
    <% for project in @projects %>
      <li class='project-pill'>
        <%= link_to project.name, project %>
      </li>
    <% end %>
  </ul>
<% end %>
