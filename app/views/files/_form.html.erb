<%= fields_for @ticket, :html => {:class => "form-horizontal"} do |f| %>
  <%= f.fields_for :assets, :child_index => number do |asset| %>
    <div class="control-group">
      <%= asset.label :asset, "File ##{number += 1}", :class => "control-label" %>
      <div class="controls">
        <%= asset.file_field :asset %>
      </div>
    </div>
  <% end %>
<% end %>
